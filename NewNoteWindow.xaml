<Window x:Class="EasyNote.NewNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyNote"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="New Note" Height="270" Width="500">
    <Grid>
        <StackPanel Grid.Row="2">
            <TextBlock Margin="5" FontSize="17" FontWeight="Bold">Your TODO:</TextBlock>
            <Border>
                <DockPanel Height="130" Margin="10">
                    <TextBox x:Name="Note" FontSize="12" SpellCheck.IsEnabled="True" Language="en-en"></TextBox>
                </DockPanel>
            </Border>
            <Button Margin="5" Width="auto" Height="20" Content="Save" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
